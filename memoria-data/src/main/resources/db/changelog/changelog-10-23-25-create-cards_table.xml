<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="6" author="lucia">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cards"/>
            </not>
        </preConditions>

        <createTable tableName="cards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="card_id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="deck_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="template_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="cards"
                baseColumnNames="deck_id"
                constraintName="fk_cards_decks"
                referencedTableName="decks"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="cards"
                baseColumnNames="template_id"
                constraintName="fk_cards_templates"
                referencedTableName="templates"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="cards" indexName="idx_card_id">
            <column name="card_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="cards" indexName="idx_card_id"/>
            <dropTable tableName="cards"/>
        </rollback>

    </changeSet>

</databaseChangeLog>