<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    
    <changeSet id="8" author="lucia">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cards_tags"/>
            </not>
        </preConditions>

        <createTable tableName="cards_tags">
            <column name="card_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="cards_tags"
                columnNames="card_id, tag_id"
                constraintName="uq_cards_tags"/>

        <addForeignKeyConstraint
                baseTableName="cards_tags"
                baseColumnNames="card_id"
                constraintName="fk_cards_tags_cards"
                referencedTableName="cards"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="cards_tags"
                baseColumnNames="tag_id"
                constraintName="fk_cards_tags_tags"
                referencedTableName="tags"
                referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="cards_tags"/>
        </rollback>

    </changeSet>
    
</databaseChangeLog>