<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!--  create "tags" table  -->
    <changeSet id="5" author="lucia">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tags"/>
            </not>
        </preConditions>

        <createTable tableName="tags">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tag_id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="tags"
                baseColumnNames="user_id"
                constraintName="fk_tags_users"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addUniqueConstraint
                tableName="tags"
                columnNames="name, user_id"
                constraintName="uq_name_user"/>

        <createIndex tableName="tags" indexName="idx_tag_id">
            <column name="tag_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="tags" indexName="idx_tag_id"/>
            <dropTable tableName="tags"/>
        </rollback>
    </changeSet>

</databaseChangeLog>