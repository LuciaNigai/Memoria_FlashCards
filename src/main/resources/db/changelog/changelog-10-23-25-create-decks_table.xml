<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create "decks" table -->
    <changeSet id="2" author="lucia">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="decks"/>
            </not>
        </preConditions>

        <createTable tableName="decks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="deck_id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="access_level" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="path" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="decks"
                baseColumnNames="parent_id"
                constraintName="fk_decks_decks"
                referencedTableName="decks"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="decks"
                baseColumnNames="user_id"
                constraintName="fk_decks_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="decks" indexName="idx_deck_id">
            <column name="deck_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="decks" indexName="idx_deck_id"/>
            <dropTable tableName="decks"/>
        </rollback>

    </changeSet>
</databaseChangeLog>